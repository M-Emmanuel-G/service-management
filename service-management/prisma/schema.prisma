generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Clients{
  id String @id @default(cuid())
  nameClient String
  address String
  cnpj String @unique
  cpf String @unique 
  registerService RegisterService[]
}

model Services{
  id String @id @default(cuid())
  service String
  description String
  registerService RegisterService[]
}

model RegisterService{
  id String @id @default(cuid())
  date String
  registrationDate String
  startDate String
  deliveryDate String
  descriptionOne String
  descriptionTwo String
  status Status @default(Orcamento)
  sendQuote EnumQuote @default(Aguardando)

  clientID String
  client Clients @relation(fields: [clientID], references: [id])
  serviceID String
  service Services @relation(fields: [serviceID], references: [id])

  quote Quote[]
  
}

enum Status{
  Orcamento
  Aguardando
  Aprovado
  Iniciado
  Finalizado
  Atrasado
}

enum EnumQuote{
  Enviado
  Aguardando
}

model Quote{
  id String @id @default(cuid())
  itemOne String
  itemTwo String
  itemThree String
  itemFour String
  itemFive String
  itemSix String
  itemSeven String
  itemEight String
  itemNine String
  itemTen String

  registerServiceID String
  registerService RegisterService @relation(fields: [registerServiceID], references: [id])
}