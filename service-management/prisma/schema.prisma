model Clients{
  id String @id @default(cuid())
  nameClient String
  address String
  cnpj String @unique
  cpf String @unique 
  typePerson TypePerson @default(FISICA) 
  registerService RegisterService[]
}

 enum TypePerson{
  FISICA
  JURIDICA
 }

model Services{
  id String @id @default(cuid())
  service String
  description String
  value String

  registerService RegisterService[]
}

model RegisterService{
  id String @id @default(cuid())
  date String
  registrationDate String
  startDate String
  deliveryDate String
  descriptionOne String
  descriptionTwo String
  status Status @default(Orcamento)
  sendQuote EnumQuote @default(Aguardando)

  clientID String
  client Clients @relation(fields: [clientID], references: [id])
  serviceID String
  service Services @relation(fields: [serviceID], references: [id])

  quote Quote[]
  
}

enum Status{
  Orcamento
  Aguardando
  Aprovado
  Iniciado
  Finalizado
  Atrasado
}

enum EnumQuote{
  Enviado
  Aguardando
}

model Quote{
  id String @id @default(cuid())
  quantity Int @default(0)

  dateCreated String @default("00/00/0000")

  productID String @default("") @unique
  product Products @relation(fields:[ productID], references: [id])

  registerServiceID String @default("")
  registerService RegisterService @relation(fields: [registerServiceID], references: [id])
}

model Products{

  id String @id @default(cuid())
  product String
  value  String
  createdAt String @default("00/00/0000")

  quote Quote[]
}